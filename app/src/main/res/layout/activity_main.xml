<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7F9FF"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/color_theme">

            <RelativeLayout
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginTop="30dp"
                android:background="@mipmap/recommend_pie_chart_bg"
                android:layout_centerHorizontal="true"/>
            <com.wan.circlepie.AnimationCirclePie
                android:id="@+id/college_num_pie"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="250dp" />
            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="40dp"
                android:id="@+id/college_num_pie_bg"
                android:layout_centerHorizontal="true">
                <RelativeLayout
                    android:id="@+id/score_container"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/my_score"
                        android:textSize="44sp"
                        android:text="文字"
                        android:textColor="#ff6a6a6a"
                        android:gravity="center_vertical"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
